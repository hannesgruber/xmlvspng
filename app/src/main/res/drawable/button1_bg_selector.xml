<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:constantSize="true"
    android:variablePadding="false">

    <item android:state_enabled="false" > <!-- disabled state-->
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="30dp"/>
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp"/>
            <corners android:radius="3dp" />
            <gradient
                android:type="linear"
                android:angle="-90"
                android:startColor="#EEEEEE"
                android:endColor="#999999" />
            <stroke android:width="2dp" android:color="#777777"/>
        </shape>
    </item>

    <item android:state_pressed="true" > <!-- pressed state-->
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <gradient
                android:type="linear"
                android:angle="-90"
                android:startColor="#CCCCCC"
                android:endColor="#666666" />
            <stroke android:width="2dp" android:color="#409CDE"/>
        </shape>
    </item>

    <item> <!-- default state -->
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <gradient
                android:type="linear"
                android:angle="-90"
                android:startColor="#CCCCCC"
                android:endColor="#666666" />
            <stroke android:width="2dp" android:color="#333333"/>
        </shape>
    </item>

</selector>