<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    // outer shadow
    <item
        android:left="0.5dp"
        android:top="0.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="4.5dp"/>
            <solid android:color="#22000000"/>
        </shape>
    </item>

    // middle shadow
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="0.5dp"
        android:bottom="0.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="#22000000"/>
        </shape>
    </item>

    // inner shadow
    <item
        android:left="1.5dp"
        android:top="1.5dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="3.5dp"/>
            <solid android:color="#22000000"/>
        </shape>
    </item>

    // Border
    <item
        android:right="1.5dp"
        android:bottom="1.5dp">
        <shape android:shape="rectangle">
            <size android:height="30dp" android:width="50dp"/>
            <corners android:radius="3dp"/>
            <gradient
                android:type="linear"
                android:angle="-90"
                android:startColor="#ff097274"
                android:endColor="#ff072123" />
        </shape>
    </item>

    <item
        android:left="1.5dp"
        android:top="1.5dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="2.5dp"/>
            <gradient
                android:type="linear"
                android:angle="-90"
                android:startColor="#ff09d9db"
                android:endColor="#ff09494b" />
        </shape>
    </item>

</layer-list>