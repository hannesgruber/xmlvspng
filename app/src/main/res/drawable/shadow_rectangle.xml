<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
    When using this shadow apply the following offsets on the object:
    android:right="1.5dp"
    android:bottom="1.5dp"
    -->

    // outer shadow
    <item
        android:left="0.5dp"
        android:top="0.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="4.5dp"/>
            <solid android:color="#22000000"/>
        </shape>
    </item>

    // middle shadow
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="0.5dp"
        android:bottom="0.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="#22000000"/>
        </shape>
    </item>

    // inner shadow
    <item
        android:left="1.5dp"
        android:top="1.5dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="3.5dp"/>
            <solid android:color="#22000000"/>
        </shape>
    </item>

</layer-list>