<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#CCCCCC"
    tools:context="com.jayway.xmlvspng.app.MainActivity">

    <RadioGroup
        android:checkedButton="@+id/available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radiobutton_green"
            android:text="Available"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radiobutton_red"
            android:text="Busy"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radiobutton_yellow"
            android:text="Meeting"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radiobutton_orange"
            android:text="Lunch"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radiobutton_blue"
            android:text="Illness"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radiobutton_grey"
            android:text="Left for the day"/>

        </RadioGroup>

    <Button
        android:background="@drawable/button_bg"
        android:padding="10dp"
        android:text="Cool Button"
        android:textColor="@drawable/button_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/button_bg"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Disabled Button"
        android:enabled="false"
        android:textColor="@drawable/button_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/button_bg"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Really big button doesn't look that cool anymore..."
        android:enabled="false"
        android:textColor="@drawable/button_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
