<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#CCCCCC"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.jayway.xmlvspng.app.MainActivity">

        <RadioGroup
            android:checkedButton="@+id/available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_green_selector"
                android:text="Available"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_red_selector"
                android:text="Busy"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_yellow_selector"
                android:text="Meeting"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_orange_selector"
                android:text="Lunch"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_blue_selector"
                android:text="Illness"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_grey_selector"
                android:text="Left for the day"/>

            </RadioGroup>

        <Button
            android:background="@drawable/button_bg_selector"
            android:padding="10dp"
            android:text="Cool Button"
            android:textColor="@drawable/button_text_color_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:background="@drawable/button_bg_selector"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Disabled Button"
            android:enabled="false"
            android:textColor="@drawable/button_text_color_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:background="@drawable/button_bg_selector"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Really big button doesn't look that cool anymore..."
            android:textColor="@drawable/button_text_color_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:background="@drawable/button_gradient_border_shadow"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp" />

        <ImageView
            android:background="@drawable/button_single_color_border"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="30dp" />

    </LinearLayout>
</ScrollView>